<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
	</head>
	<body>
<button id="test2">小小提示层</button>


<script src="http://code.jquery.com/jquery-1.8.0.min.js"></script>
<script src="layer.js"></script>
<script>

//弹出一个页面层
$('#test2').on('click', function(){
  layer.open({
  type: 1,
  area: ['600px', '360px'],
  shadeClose: true, //点击遮罩关闭
  content: '\<\div style="padding:20px;">自定义内容\<\/div>'
  });
});

</script>

</body>
</html>
